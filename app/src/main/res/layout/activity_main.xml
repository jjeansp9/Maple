<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_ellinia"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_ads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/base_horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_layout_nogada"
                    android:padding="12dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_set_music"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="start"
                        android:text="노목 강화하기"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_24"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_set_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/tv_set_theme"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_layout_box"
                        android:backgroundTint="@color/btn_color"
                        android:padding="8dp"
                        android:text="음악끄기"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_set_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:padding="8dp"
                        android:background="@drawable/bg_layout_box"
                        android:backgroundTint="@color/btn_color"
                        android:text="테마변경"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/white"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/layout_glove_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_layout_nogada"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:src="@drawable/glove_10"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_set_glove_10"
                            android:layout_marginHorizontal="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_glove_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:text="장공 주문서 10% (공 +3)"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_16" />
                            <TextView
                                android:id="@+id/tv_glove_10_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:text="0 메소"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_set_glove_10"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="@drawable/bg_layout_box"
                            android:backgroundTint="@color/brand_color"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:text="금액 설정"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_glove_60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_layout_nogada"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:src="@drawable/glove_60"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_set_glove_60"
                            android:layout_marginHorizontal="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_glove_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:text="장공 주문서 60% (공 +2)"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_16" />
                            <TextView
                                android:id="@+id/tv_glove_60_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:text="0 메소"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_set_glove_60"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="@drawable/bg_layout_box"
                            android:backgroundTint="@color/brand_color"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:text="금액 설정"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_layout_nogada"
                    android:layout_marginTop="16dp"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="총 강화에 사용한 메소"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/buy_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:text="0 메소"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tv_change_theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_layout_box"
                            android:backgroundTint="@color/gray"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:text="테마 변경"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/tv_buy_total_reset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_layout_box"
                            android:backgroundTint="@color/gray"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:text="금액 초기화"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_glove_60"
                    android:background="@drawable/bg_layout_nogada"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tv_nogada_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:gravity="center"
                        android:text="노가다 목장갑"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_18"/>
                    <ImageView
                        android:id="@+id/img_nogada"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_nogada_name"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_nogada_glove"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_req"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@id/img_nogada"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/img_nogada"
                        app:layout_constraintBottom_toBottomOf="@id/img_nogada"
                        android:layout_marginStart="8dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/layout_upgrade"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_req_lev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REQ LEV : 10"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12"/>
                            <TextView
                                android:id="@+id/tv_req_str"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REQ STR : 0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12"/>
                            <TextView
                                android:id="@+id/tv_req_dex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REQ DEX : 0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12"/>
                            <TextView
                                android:id="@+id/tv_req_int"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REQ INT : 0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12"/>
                            <TextView
                                android:id="@+id/tv_req_luk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REQ LUK : 0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_upgrade"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:id="@+id/layout_upgrade_10"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_layout_box"
                                android:backgroundTint="@color/btn_glove_10"
                                android:paddingHorizontal="12dp"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:id="@+id/img_upgrade_10"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_ad"
                                    android:layout_marginEnd="2dp"
                                    android:visibility="gone"/>

                                <TextView
                                    android:id="@+id/tv_upgrade_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end|center_vertical"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold"
                                    android:text="10% 강화"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_upgrade_60"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_layout_box"
                                android:backgroundTint="@color/btn_glove_60"
                                android:paddingHorizontal="12dp">

                                <ImageView
                                    android:id="@+id/img_upgrade_60"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_ad"
                                    android:layout_marginEnd="2dp"
                                    android:visibility="gone"/>

                                <TextView
                                    android:id="@+id/tv_upgrade_60"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end|center_vertical"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold"
                                    android:text="60% 강화"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/layout_job"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/img_nogada"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="초보자"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="전사"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="마법사"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="궁수"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="도적"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_job"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="6dp"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:id="@+id/layout_nogada_option"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="6dp"
                        android:gravity="top">
                        <TextView
                            android:id="@+id/tv_item_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="장비분류 : 장갑"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_power"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="공격력 : +15"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_dex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="DEX : +15"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_physical_def"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="물리방어력 : +2"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_magic_def"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="마법방어력 : +2"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_acc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="명중률 : +15"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_avd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="회피율 : +2"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_speed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="이동속도 : +2"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_upgrade_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="업그레이드 가능 횟수 : 5"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="end"
                            android:textSize="@dimen/text_size_16"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_nogada_option"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/tv_change_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_nogada_option"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_layout_box"
                            android:backgroundTint="@color/btn_color"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold"
                            android:text="아이템 변경" />

                        <TextView
                            android:id="@+id/tv_reset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_nogada_option"
                            android:background="@drawable/bg_layout_box"
                            android:backgroundTint="@color/gray"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold"
                            android:text="강화 초기화"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ScrollView
                    android:id="@+id/scroll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/bg_layout_nogada"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:scrollbars="vertical"
                    android:nestedScrollingEnabled="true"
                    android:visibility="invisible">
                    <LinearLayout
                        android:id="@+id/layout_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />
                </ScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_ads"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/ads_banner_id"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>